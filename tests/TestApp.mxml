<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" xmlns="*"
				layout="vertical"
				applicationComplete="initApp()"  width="900" >
	<mx:Script>
		<![CDATA[
			import flash.utils.describeType;
			import flash.utils.getQualifiedClassName;
			
			import mx.collections.ArrayCollection;
			import mx.controls.listClasses.ListBase;
			import mx.events.DragEvent;
			import mx.rpc.AbstractService;
			
			import org.flex_pilot.FPController;
			import org.flex_pilot.FPRecorder;
			import org.flex_pilot.astest.ASTest;
			public var testAppCode:TestAppCode = new TestAppCode();
			public function initApp():void {
				
				srcgrid.dataProvider = new ArrayCollection([
					{Artist:'Carole King', Album:'Tapestry', Price:11.99},
					{Artist:'Paul Simon', Album:'Graceland', Price:10.99},
					{Artist:'Original Cast', Album:'Camelot', Price:12.99},
					{Artist:'The Beatles', Album:'The White Album', Price:11.99}
				]);
				
				destgrid.dataProvider = new ArrayCollection([]);
				
				
				
				
				
				testAppCode.init(this);
			}
			
			
			
		]]>
	</mx:Script>
	
	
	
	<mx:HBox left="50">
		<mx:VBox>
			<mx:Label text="Available Albums"/>
			<mx:DataGrid id="srcgrid" 
						 allowMultipleSelection="true" 
						 dragEnabled="true" 
						 dropEnabled="true" 
						 dragMoveEnabled="true" editable="true" >
				<mx:columns>
					<mx:DataGridColumn dataField="Artist" editable="false"/>
					<mx:DataGridColumn dataField="Album" editable="false"/>
					<mx:DataGridColumn dataField="Price"/>
				</mx:columns>    
			</mx:DataGrid>
		</mx:VBox>
		
		<mx:VBox>
			<mx:Label text="Buy These Albums"/>
			<mx:DataGrid id="destgrid" 
						 allowMultipleSelection="true" 
						 dragEnabled="true" 
						 dropEnabled="true" 
						 dragMoveEnabled="true" editable="true">
				<mx:columns>
					<mx:DataGridColumn dataField="Artist" editable="false"/>
					<mx:DataGridColumn dataField="Album" editable="false"/>
					<mx:DataGridColumn dataField="Price"/>
				</mx:columns>    
			</mx:DataGrid>
		</mx:VBox>
	</mx:HBox>
	
	<mx:Button id="b1" 
			   label="Reset"
			   click="initApp()"
			   />
	
	<mx:VBox>
		<mx:HSlider  id="hslid" name="Horizontal Slider" maximum="200" value="10"/>
		
		<mx:DateField id="df" name="Date Field" />
	</mx:VBox>
		<mx:XMLList id="dpHierarchyXML" >
		<Region Region="Southwest">
			<Region Region="Arizona">
				<Territory_Rep Territory_Rep="Barbara Jennings" 
